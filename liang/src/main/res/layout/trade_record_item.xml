<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <com.zhimei.liang.customview.RoundImageView
        android:id="@+id/trade_good_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/test1"
        />

    <RelativeLayout
        android:id="@+id/trade_good_other"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/trade_good_picture"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/trade_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海贼王,航海王"
            android:textColor="#0A0A0A"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/trade_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trade_good_name"
            android:text="¥ 19"
            android:textSize="23sp"
            android:textColor="#EE2C2C"/>
        <TextView
            android:id="@+id/trade_good_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trade_good_price"
            android:text="2015.4.16"
            android:textSize="17sp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/trade_good_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:text="买进"
        android:textSize="17sp"/>


</RelativeLayout>
