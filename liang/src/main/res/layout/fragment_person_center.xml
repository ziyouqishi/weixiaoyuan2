<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:id="@+id/per_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#5CACEE"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>


    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/per_one"
        >

        <RelativeLayout
            android:id="@+id/per_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <RelativeLayout
                android:id="@+id/per_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/bg"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <com.zhimei.liang.customview.RoundImageView
                        android:id="@+id/per_iv_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/logo"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/per_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:layout_below="@+id/per_iv_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textColor="#EE0000"/>

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/per_score"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/per_image"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF">
                <ImageView
                    android:id="@+id/per_iv_score"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/jifen"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/per_tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/per_iv_score"
                    android:textSize="18dp"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true"
                    android:text="我的积分"/>

                <ImageView
                    android:id="@+id/per_more_score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/more"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/grayline"
                    android:layout_alignLeft="@+id/per_iv_score"
                    android:layout_alignRight="@+id/per_more_score"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/per_tradedetail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/per_score"
                android:background="#FFFFFF">
                <ImageView
                    android:id="@+id/per_iv_tradedetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/jiaoyi"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/per_tv_tradedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/per_iv_tradedetail"
                    android:textSize="18dp"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true"
                    android:text="交易记录"/>
                <ImageView
                    android:id="@+id/per_more_tradedetaill"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/more"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/per_donatedetail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/per_tradedetail"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF">
                <ImageView
                    android:id="@+id/per_iv_donatedetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/donate"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/per_tv_donatedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/per_iv_donatedetail"
                    android:textSize="18dp"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true"
                    android:text="捐赠信息"/>

                <ImageView
                    android:id="@+id/per_more_donatedetail"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/more"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/grayline"
                    android:layout_alignLeft="@+id/per_iv_donatedetail"
                    android:layout_alignRight="@+id/per_more_donatedetail"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/per_modifyaddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/per_donatedetail"
                android:background="#FFFFFF">
                <ImageView
                    android:id="@+id/per_iv_modifyaddress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/address"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/per_tv_modifyaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/per_iv_modifyaddress"
                    android:textSize="18dp"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true"
                    android:text="修改地址"/>

                <ImageView
                    android:id="@+id/per_more_modifyaddress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/more"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/per_demand"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/per_modifyaddress"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF">
                <ImageView
                    android:id="@+id/per_iv_demand"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/xuqiuzhongxin"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/per_tv_demand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/per_iv_demand"
                    android:textSize="18dp"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true"
                    android:text="需求中心"/>
                <ImageView
                    android:id="@+id/per_more_demand"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/more"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />



            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/per_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/per_demand"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <Button
                    android:id="@+id/per_bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textSize="20sp"
                    android:background="#5CACEE"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
