<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">


    <com.zhimei.liang.customview.CircleImageView
        android:id="@+id/donation_good_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />

    <RelativeLayout
        android:id="@+id/donation_good_other"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/donation_good_picture"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/donation_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="迪士尼公主精选集"
            android:textColor="#0A0A0A"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/receive_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donation_good_name"
            android:text="支教团队"
            android:textSize="16sp"
            android:textColor="#EE2C2C"/>
        <TextView
            android:id="@+id/donation_good_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receive_organization"
            android:text="2015.4.16"
            android:textSize="15sp"
            />

    </RelativeLayout>



</RelativeLayout>
