<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/need_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5CACEE">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

            <ImageButton
                android:id="@+id/need_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/backhome"
                />
            <TextView
                android:id="@+id/need_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:text="发布需求"/>

            <ImageButton
                android:id="@+id/need_index"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/reg_back"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"

                android:background="@mipmap/back"
                />


        </RelativeLayout>

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:id="@+id/need_two_name"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/rel_two_getname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="名称"
            android:ems="10"
            android:background="@android:drawable/edit_text"
            android:singleLine="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/need_two_descreption"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/need_two_name"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/need_two_getdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="商品备注"
            android:ems="10"
            android:lines="2"
            android:background="@android:drawable/edit_text"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/need_two_catagory"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/need_two_descreption"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/need_cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类别"
            android:textSize="19sp"/>


        <Spinner
            android:layout_toRightOf="@+id/need_cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_spinner1"
            android:entries="@array/goods_catagory"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/need_two_commit"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/need_two_catagory"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/need_two_commit_ensure"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="48dp"
                android:background="@mipmap/aa"
                />

            <ImageButton
                android:id="@+id/need_two_giveup"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/need_two_commit_ensure"
                android:background="@mipmap/bb"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>

</RelativeLayout>
